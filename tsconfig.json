{
  "compilerOptions": {
    "outDir": "lib",
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es2016",
    "baseUrl": ".",
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ] 
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}